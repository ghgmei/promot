				unitOtherLabel.visible=true;
				unitOther.visible=true;
			}
			
			
			
			protected function last_clickHandler(event:MouseEvent):void
			{
			
				
				if(!unit1.selected && !unit2.selected && !unit3.selected && !unit4.selected && !unit5.selected && !unit6.selected && !unit7.selected && !unit8.selected&& !unit9.selected)
					
				{
					
					ansall.visible=true;
					last.selected=false;
					
				}else 
				{
					
					
					
					ansall.visible=false;
					fin_btn.visible=true;
					
					
				}
				
				
				
				if(nameOfDrug.text == '')
				{
					
					ansall.visible=true;
					last.selected=false;
					
				}else 
				{
					
					
					
					ansall.visible=false;
					fin_btn.visible=true;
					
					
				}
				
				if (!last.selected) {
					
					
					fin_btn.visible=false;
					ansall.visible=true;
					
				}
			}
			
